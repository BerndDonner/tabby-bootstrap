#!/usr/bin/env bash
# ===============================================================
# ðŸ’‰ pre-commit: ensure secrets/seed.sh is filtered before commit
# ===============================================================
set -euo pipefail

TARGET="secrets/seed.sh"

if [[ -f "$TARGET" ]]; then
  if git check-attr filter "$TARGET" | grep -q stripsecrets; then
    echo "==> Reapplying strip-secrets filter to $TARGET"
    git add --renormalize "$TARGET"
  fi
fi
