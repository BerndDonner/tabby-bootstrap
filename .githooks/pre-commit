set -euo pipefail

# Never allow committing the generated local seed
if git diff --cached --name-only | grep -q '^secrets/seed.py$'; then
  echo "âŒ secrets/seed.py is generated and must not be committed."
  echo "   Edit and commit secrets/seed_stripped.py instead."
  exit 1
fi
